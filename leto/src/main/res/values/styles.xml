<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="HekaTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/ag</item>
        <item name="android:textColorSecondary">@color/ag</item>
        <item name="actionMenuTextColor">@color/ag</item>

    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/offblack</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="HekaToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ag</item>
        <item name="android:textColorSecondary">@color/ag</item>
        <item name="actionMenuTextColor">@color/ag</item>
        <item name="android:fontFamily">serif</item>

    </style>


</resources>